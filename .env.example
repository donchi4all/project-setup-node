# ===============================================================
# ===================== APPLICATION SETTINGS ===================
# ===============================================================

# Application Name
APP_NAME='api-template'

# Application Environment: development | production | test
APP_ENVIRONMENT=development

# Application Host and Port
APP_HOST=http://127.0.0.1
APP_PORT=3000

# ===============================================================
# ===================== DATABASE SETTINGS ======================
# ===============================================================

# Database Connection Type: mysql | postgres | sqlite | mssql
DB_CONNECTION=mysql

# Enable multiple statements per query (use with caution)
DB_MULTI_STATEMENT=true

# Return DATE/TIME fields as strings instead of JavaScript Date objects
DB_DATE_STRINGS=true

# Database Host and Port
DB_HOST=127.0.0.1
DB_PORT=3306

# Database Name
DB_DATABASE=

# Database Credentials
DB_USERNAME=
DB_PASSWORD=

# ===============================================================
# ===================== CLIENT / FRONTEND ======================
# ===============================================================

# Frontend Application URL
URL_CLIENT=

# Allowed origins for CORS requests (comma-separated)
CORS_ORIGIN=

# ===============================================================
# ===================== LOGGING SETTINGS =======================
# ===============================================================

# Enable API request logging
API_LOG=true

# Enable CRUD operation logging
CRUD_LOG=true